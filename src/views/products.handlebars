{{#if user}}
<div class="container text-center">
    <h1>Bienvenidos {{user.first_name}} {{user.last_name}}</h1>
    <p>Rol: {{user.role}} </p>
    <a href="/api/sessions/logout">Logout</a>
</div>
<br>
{{/if}}
<div class="container text-center">
    <h2 class="my-4">Lista de Productos</h2>
    <br>
</div>

<div class="container">
    <div class="row justify-content-center">
        {{#each products}}
        <div class="col-md-4 col-lg-3 mb-3">
            <div class="text-center card" style="width: 16rem; height: 36rem;">
                <div class="card-header border-primary">Categor√≠a: {{this.category}}</div>
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <div class="card-title h5">{{this.title}}</div>
                        <img src="{{this.thumbnail.[0]}}" class="thumbnail" alt="Thumbnail"
                            style="max-width: 10rem; max-height: 10rem; object-fit: contain;">
                        <div class="mb-2 text-muted card-subtitle h6">Precio: ${{this.price}}</div>
                        <p class="card-text">{{this.description}}</p>
                    </div>
                    <div class="text-muted card-footer border-primary">Stock: {{this.stock}}</div>
                    <div>
                        <button type="button" class="btn btn-outline-primary">Agregar al carrito</button>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{#if hasPrevPage}}
    <a href="/products?page={{prevPage}}"> Anterior </a>
    {{/if}}

    {{#if hasNextPage}}
    <a href="/products?page={{nextPage}}"> Siguiente </a>
    {{/if}}

    <p>Pagina {{currentPage}} de {{totalPages}} </p>
</div>